datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Internship {
  id Int @id @default(autoincrement())

  studentId   String
  studentName String
  mentorName  String

  academicYear   String
  internshipType String // Paid / Unpaid / Research / Industrial
  organization   String
  department     String
  roleDomain     String
  stipend        Int? // nullable (for unpaid internships)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
